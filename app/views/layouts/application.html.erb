<!DOCTYPE html>
<html>
<head>
  <title>YogaJournal</title>
  <%= stylesheet_link_tag    "bootstrap_and_overrides", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
  <meta name="viewport" content="width=device-width, initial-scale=1.0"
</head>
<body>
	<div class="navbar navbar-fixed-top">
  <div class="navbar-inner">
    <div class="container">
      <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </a>

      <% if session[:user_id].present? %>
        <a class="brand" <%= link_to 'My Yoga Journal', user_url(session[:user_id]) %></a>
      <% else %>
       <a class="brand" <%= link_to 'My Yoga Journal', root_url %></a>
      <% end %>
 
      <!-- Everything you want hidden at 940px or less, place within here -->
      <div class="nav-collapse">
        <ul class="nav">
        	<li><%= link_to "New Yoga Post", new_yoga_post_url %></li>
          <li><%= link_to "New Meditation Post", new_meditation_post_url %></li>
          <li><%= link_to "New Class Review", new_review_url %></li>
          <li><%= link_to "Your Yoga Teachers", teachers_url %></li>
          <% if session[:user_id].present? %>
            <li><%= link_to "Sign Out", sessions_destroy_url %></li>
            <li><%= link_to "My Profile", user_url(session[:user_id]) %></li>
          <% else %>
            <li><%= link_to "Sign Up", new_user_url%></li>
            <li><%= link_to "Sign In", sessions_new_url %></li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
</div>

<div class="container">
	<div class="row">
		<div class="span12">
			<%= yield %>
		</div>
</div>


</body>
</html>
