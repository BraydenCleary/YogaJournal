<h1>My Meditation Posts</h1>

<table>
  <tr>
    <th>Length</th>
    <th>Breath</th>
    <th>Feeling</th>
  </tr>

<% @meditation_posts.each do |meditation_post| %>
  <tr>
    <td><%= meditation_post.length %></td>
    <td><%= meditation_post.breath %></td>
    <td><%= meditation_post.feeling %></td>
    <td><%= meditation_post.user_id %></td>
    <td><%= link_to 'Show', meditation_post %></td>
    <td><%= link_to 'Edit', edit_meditation_post_path(meditation_post) %></td>
    <td><%= link_to 'Destroy', meditation_post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Meditation post', new_meditation_post_path %>
